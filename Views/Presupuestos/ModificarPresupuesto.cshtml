@using TP7.ViewModels
@model ModificarPresupuestoViewModel

@if (ViewBag.ErrorMessage != null)
{
        <div class="error-message">
            <p>@ViewBag.ErrorMessage</p>
        </div>
}


<h2>Editar Presupuesto</h2>

<form asp-controller="Presupuestos" asp-action="ModificarPresupuesto" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
        <label for="IdCliente" class="form-label">Cliente</label>
        <select name="IdCliente" class="form-control" required>
            <option value="">Seleccione un cliente</option>
            @foreach (var cliente in (IEnumerable<SelectListItem>)ViewData["Clientes"])
            {
                <option value="@cliente.Value">@cliente.Text</option>
            }
        </select>
        <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCreacion" class="form-label">Fecha de Creaci√≥n</label>
        <input asp-for="FechaCreacion" type="date" class="form-control" value="@Model.FechaCreacion" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IdPresupuesto" value = "@Model.IdPresupuesto"/>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}
