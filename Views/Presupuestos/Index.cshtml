@using TP6.Models
@model List<Presupuesto>

@if (ViewBag.ErrorMessage != null)
{
        <div class="error-message">
            <p>@ViewBag.ErrorMessage</p>
        </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Presupuestos</h2>

<div class="text-center">
    @if ((bool)ViewData["EsAdmin"])
    {
        <a asp-controller="Presupuestos" asp-action="AltaPresupuesto" class="btn btn-success mb-2">Alta presupuesto</a>
    }
</div>


<table class="table table-bordered text-light">
    <thead>
        <tr>
            <th>Destinatario</th>
            <th>Fecha de Creacion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var presupuesto in Model)
        {
            <tr>
                <td>@presupuesto.Cliente.Nombre</td>
                <td>@presupuesto.FechaCreacion.ToShortDateString()</td>
                <td>
                    <a asp-controller="Presupuestos" asp-action="DetallesDelPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-info">Detalles</a>
                    @if ((bool)ViewData["EsAdmin"])
                    {
                        <a asp-controller="Presupuestos" asp-action="AgregarProductoAPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-success">Agregar Producto</a>
                        <a asp-controller="Presupuestos" asp-action="EliminarProductoAPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-danger">Eliminar Producto</a>
                        <a asp-controller="Presupuestos" asp-action="ModificarPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-warning">Editar</a>
                        <a asp-controller="Presupuestos" asp-action="EliminarPresupuesto" asp-route-id="@presupuesto.IdPresupuesto" class="btn btn-danger">Eliminar</a>
                        
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


