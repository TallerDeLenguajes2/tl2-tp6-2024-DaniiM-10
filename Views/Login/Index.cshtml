@using TP7.ViewModels
@model LoginViewModel  

@if (ViewBag.ErrorMessage != null)
{
        <div class="error-message">
            <p>@ViewBag.ErrorMessage</p>
        </div>
}


<!-- Mostrar mensaje de error si existe -->
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

@if (@Model.IsAuthenticated)
{
    <span class="nav-link text-dark me-3">Bienvenido @Model.Username</span>
    <a class="nav-link" href="@Url.Action("Logout", "Login")">Cerrar Sesi칩n</a>
}else{

    <div class="container d-flex justify-content-center align-items-center bg-dark" style="min-height: 100vh;">
        <div class="card shadow-lg p-4 bg-dark" style="max-width: 400px; width: 100%;">
            <h4 class="card-title text-center mb-4">Iniciar sesi칩n</h4>
            <form method="post" asp-action="Login" class="bg-dark">
                <div class="mb-3">
                    <label for="username" class="form-label">Usuario:</label>
                    <input type="text" class="form-control" id="username" name="username" value="@Model.Username" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Contrase침a:</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Iniciar sesi칩n</button>
                </div>
            </form>
        <div class="d-grid gap-2 mt-2">
            <a asp-controller="Login" asp-action="CrearUsuario" class="btn btn-success">Crear Usuario</a>
        </div>
        </div>
        
    </div>
}
