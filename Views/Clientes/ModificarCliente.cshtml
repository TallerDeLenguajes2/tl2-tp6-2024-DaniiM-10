@using TP7.ViewModels
@model ModificarClienteViewModel


@if (ViewBag.ErrorMessage != null)
{
        <div class="error-message">
            <p>@ViewBag.ErrorMessage</p>
        </div>
}

<h2>Editar Cliente</h2>

<form asp-controller="Clientes" asp-action="ModificarCliente" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" value = "@Model.Nombre" required/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" value = "@Model.Email" required/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

        <div class="form-group">
        <label asp-for="Telefono" class="control-label"></label>
        <input asp-for="Telefono" class="form-control" value = "@Model.Telefono" required/>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>


    <input type="hidden" asp-for="ClienteId" />

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}
