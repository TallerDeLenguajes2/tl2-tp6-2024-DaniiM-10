@using TP6.Models
@model Producto

@if (ViewBag.ErrorMessage != null)
{
        <div class="error-message">
            <p>@ViewBag.ErrorMessage</p>
        </div>
}

<div class="container mt-4">
    <div class="mb-4">
        <h2>Producto</h2>
        <p><strong>Producto:</strong> @Model.Descripcion</p>
        <p><strong>Precio:</strong> @Model.Precio</p>
    </div>
    <p class="text-center">Â¿Desea eliminar este presupuesto?</p>
    <div class="text-center">
        <a asp-controller="Productos" asp-action="EliminarProductoPorId" asp-route-id="@Model.IdProducto" class="btn btn-success">Eliminar</a>
        <a asp-controller="Productos" asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</div>
